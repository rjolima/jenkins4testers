pipeline{
    agent {
        docker{
            image "ruby:alpine"
            
        }
    }
    stages{
        stage("Build"){
            steps{
                sh "chmod +x build/alpine.sh" // +x vai dar permissão de execução - linu
                sh "./build/alpine.sh" // vai executar o alpine
                sh "bundle install"
            }
        }
        stage("Tests"){
            steps {
                sh "bundle exec cucumber -p ci" // Linus executar com bandle
            }
        }
    }
}